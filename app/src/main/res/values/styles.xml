<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- texinput layout>  -->
    <style name="styloCabeceroTextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item> <!-- tamaÃ±o del texto de layout -->
        <item name="android:textColor">#ffffff</item><!-- color del texto de layout -->

    </style>

    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="generalButtonBlanco">
        <item name="android:background">@drawable/genral_efecto_ripple_gris</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //mel
    <style name="noEditableTextStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

</resources>
